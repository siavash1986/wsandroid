<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wsAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorLink">@color/primaryColorAccent</item>
        <item name="android:actionBarStyle">@style/WsActionBar</item>
        <item name="alertDialogTheme">@style/wsAppTheme.Dialog.Alert</item>
        <item name="android:spinnerItemStyle">@style/WsText.light</item>
        <item name="colorButtonNormal">@color/button_dark</item>
        <item name="android:textAppearanceButton">@style/buttonStyle</item>

        <!-- Option Panel Menu -->
        <item name="android:itemTextAppearance">@style/TextAppearance</item>




        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/WsActionBar</item>
    </style>

    <!-- Option Panel Menu -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wsAppTheme.Grey" parent="wsAppTheme">
        <item name="colorPrimary">@color/greyColor</item>
        <item name="colorPrimaryDark">@color/greyColorDark</item>
        <item name="colorAccent">@color/greyColorAccent</item>
    </style>

    <!-- Below is required as of appcompat v22.1 to avoid a crash, see http://stackoverflow.com/questions/29790070/upgraded-to-appcompat-v22-1-0-and-now-getting-illegalargumentexception-appcompa -->
    <style name="wsAppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WsActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/WsTitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/WsTitleTextStyle</item>
    </style>

    <!-- App compat dialogs -->
    <style name="wsAppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColorAccent</item>
    </style>


    <!-- Animated Arrow - Toolbar -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Map Location Clusters -->
    <style name="SingleLocationClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Icon Styles -->
    <style name="WsListIcon">
        <item name="android:tint">@color/primaryTextColorLight</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!-- Button Styles -->

    <style name="button_dark" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <!-- Text Styles -->
    <style name="WsPictureOverlayTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/primaryWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WsPictureOverlayTitle.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WsText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WsText.light">
        <item name="android:textColor">@color/primaryTextColorLight</item>
    </style>

    <style name="WsText.warning">
        <item name="android:textColor">@color/textWarning</item>
    </style>

    <style name="WsText.subHead">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="WsText.title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WsText.headline">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="WsText.caption">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="WsTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="WsInputText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WsInputText.Headline" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
